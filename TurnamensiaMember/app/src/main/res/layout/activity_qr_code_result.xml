<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.tugasakhir.turnamensiamember.View.Organizer.Team.OQrCodeResultActivity">

    <include
        android:id="@+id/activity_qr_code_result_include_1"
        layout="@layout/item_organizer_team_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/activity_qr_code_result_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_qr_code_result_include_1"
        android:background="@color/colorBorderOne" />

    <RelativeLayout
        android:id="@+id/activity_qr_code_result_relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_qr_code_result_view_1"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/member_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/member_image"
            android:text="Username"
            android:textColor="@color/colorTextDefault"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/member_steam_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/member_name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/member_image"
            android:text="steam Id"
            android:textColor="@color/colorTextDefault"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/member_identification_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/activity_qr_code_result_relative_layout_1"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/approve_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorButtonApprove"
        android:text="Approve"
        android:textColor="@color/colorTextDefault" />
</RelativeLayout>
