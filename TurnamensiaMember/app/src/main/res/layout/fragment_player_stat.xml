<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tugasakhir.turnamensiamember.View.LiveMatch.PlayerStatFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/radiant_image_player_stat"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:scaleType="fitXY"
                android:src="@drawable/live_match_default" />

            <TextView
                android:id="@+id/radiant_text_player_stat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="Radiant"
                android:textColor="@color/colorTextDefault"
                android:textSize="28dp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/ll_1"
            android:layout_marginTop="8dp"
            android:background="@color/colorLiveMatchTableBackground"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:text="Hero"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Player"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="K/D/A"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="LH/DN"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Net"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/radiant_statistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_2"
            tools:listitem="@layout/item_statistic" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/radiant_statistic"
            android:layout_marginTop="4dp"
            android:background="@color/colorBackground"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:text="Hero"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Player"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Items"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/radiant_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_3"
            tools:listitem="@layout/item_items" />

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiant_item"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dire_image_player_stat"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:scaleType="fitXY"
                android:src="@drawable/live_match_default" />

            <TextView
                android:id="@+id/dire_text_player_stat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Dire"
                android:textColor="@color/colorTextDefault"
                android:textSize="28dp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_5"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/ll_4"
            android:layout_marginTop="8dp"
            android:background="@color/colorLiveMatchTableBackground"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:text="Hero"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Player"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="K/D/A"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="LH/DN"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Net"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dire_statistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_5"
            tools:listitem="@layout/item_statistic" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_6"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/dire_statistic"
            android:layout_marginTop="4dp"
            android:background="@color/colorBackground"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:text="Hero"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Player"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Items"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dire_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_6"
            tools:listitem="@layout/item_items" />
    </RelativeLayout>
</ScrollView>
