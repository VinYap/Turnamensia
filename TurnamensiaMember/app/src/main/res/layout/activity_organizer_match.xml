<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.tugasakhir.turnamensiamember.View.Organizer.Match.OMatchActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/match_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/colorTabLayoutBackground"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorTabLayoutIndicator"
        app:tabIndicatorHeight="4dp"
        app:tabMaxWidth="180dp"
        app:tabMinWidth="180dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorTabLayoutTextSelected"
        app:tabTextColor="@color/colorTabLayoutTextDefault" />

    <android.support.v4.view.ViewPager
        android:id="@+id/match_pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
