<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_default="wrap">

        <TextView
            android:id="@+id/match_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Match id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/match_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Game 1 | Best of 3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/match_radiant_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ib"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/match_radiant"
            app:layout_constraintTop_toBottomOf="@+id/match_id"
            app:layout_constraintRight_toLeftOf="@+id/textView5" />

        <TextView
            android:id="@+id/match_radiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radiant"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/match_radiant_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/match_id"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.512"
            app:layout_constraintRight_toLeftOf="@+id/match_radiant_image" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/match_radiant_image"
            app:layout_constraintLeft_toRightOf="@+id/match_radiant_image"
            app:layout_constraintRight_toLeftOf="@+id/match_dire_image" />

        <ImageView
            android:id="@+id/match_dire_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ib"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/match_id"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintRight_toLeftOf="@+id/match_dire"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/match_dire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dire"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/match_id"
            app:layout_constraintBottom_toBottomOf="@+id/match_dire_image"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/match_dire_image"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="14 : 00"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintLeft_toRightOf="@+id/match_radiant_image"
            app:layout_constraintRight_toLeftOf="@+id/match_dire_image" />

        <TextView
            android:id="@+id/match_dire_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/match_radiant_image"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintRight_toLeftOf="@+id/match_dire_image" />

        <TextView
            android:id="@+id/match_radiant_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/match_radiant_image"
            app:layout_constraintLeft_toRightOf="@+id/match_radiant_image"
            app:layout_constraintRight_toLeftOf="@+id/textView5" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
