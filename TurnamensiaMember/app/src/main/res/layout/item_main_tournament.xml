<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewHolder"
        app:layout_constraintHeight_default="wrap">

        <ImageView
            android:id="@+id/main_tournament_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ib" />

        <TextView
            android:id="@+id/main_tournament_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Tournament Name"
            android:textColor="@color/colorViewHolderHeaderText"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/main_tournament_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_tournament_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="Rp 10.000 / Team"
            android:textColor="@color/colorViewHolderText"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/main_tournament_image"
            app:layout_constraintTop_toBottomOf="@id/main_tournament_name" />

        <TextView
            android:id="@+id/main_tournament_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="30 July - 16 August"
            android:textColor="@color/colorViewHolderText"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/main_tournament_image"
            app:layout_constraintTop_toBottomOf="@+id/main_tournament_price" />

        <TextView
            android:id="@+id/main_tournament_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="Registration before 24 July"
            android:textColor="@color/colorViewHolderText"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/main_tournament_image"
            app:layout_constraintTop_toBottomOf="@+id/main_tournament_date" />

        <TextView
            android:id="@+id/main_tournament_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:text="Upcoming"
            android:textColor="@color/colorViewHolderTextDark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
