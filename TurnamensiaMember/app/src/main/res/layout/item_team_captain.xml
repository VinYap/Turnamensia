<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewHolder"
        app:layout_constraintHeight_default="wrap">

        <ImageView
            android:id="@+id/captain_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/captain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Captain Name"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/captain_image"
            android:textColor="@color/colorViewHolderHeaderText"
            app:layout_constraintTop_toTopOf="@+id/captain_image"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/captain_steam_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Steam id"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/captain_image"
            app:layout_constraintTop_toBottomOf="@+id/captain_name"
            android:textColor="@color/colorViewHolderHeaderText" />

        <TextView
            android:id="@+id/captain_joined_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Joined on 24 July 2017"
            app:layout_constraintLeft_toRightOf="@+id/captain_image"
            app:layout_constraintTop_toBottomOf="@+id/captain_steam_id"
            android:textColor="@color/colorViewHolderHeaderText" />

        <TextView
            android:id="@+id/captain_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="captain"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorViewHolderTextDark"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
