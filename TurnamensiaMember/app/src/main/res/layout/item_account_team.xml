<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewHolder"
        app:layout_constraintHeight_default="wrap">

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ib"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Team Name"
            android:textColor="@color/colorViewHolderHeaderText"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/team_image"
            app:layout_constraintTop_toTopOf="@+id/team_image"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/team_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="5 member"
            android:textSize="14sp"
            android:textColor="@color/colorViewHolderHeaderText"
            app:layout_constraintLeft_toRightOf="@+id/team_image"
            app:layout_constraintTop_toBottomOf="@+id/team_name" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>