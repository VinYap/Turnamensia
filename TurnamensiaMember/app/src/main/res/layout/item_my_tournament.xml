<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOrganizerTeamHeader"
    android:padding="8dp">

    <ImageView
        android:id="@+id/tournament_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tournament_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/tournament_image"
        android:text="Team Name"
        android:textColor="@color/colorTextDefault"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tournament_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tournament_image"
        android:text="Lenovo League"
        android:textColor="@color/colorTextDefault"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tournament_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tournament_image"
        android:text="Registration on 12 Juni 2015"
        android:textColor="@color/colorTextDefault"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/tournament_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tournament_date" />
</RelativeLayout>
