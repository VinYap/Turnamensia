<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewHolder"
        android:padding="8dp">

        <ImageView
            android:id="@+id/tournament_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/team_name"
            android:layout_alignStart="@+id/team_name"
            android:text="Team Name"
            android:textColor="@color/colorViewHolderHeaderText"
            android:textSize="18sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tournament_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tournament_image"
            android:text="Lenovo League"
            android:textColor="@color/colorViewHolderHeaderText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tournament_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tournament_image"
            android:text="Registration on 12 Juni 2015"
            android:textColor="@color/colorViewHolderHeaderText"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/tournament_qr_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/tournament_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />
    </RelativeLayout>
</android.support.v7.widget.CardView>